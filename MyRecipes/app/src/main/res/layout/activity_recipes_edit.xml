<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecipesEdit"
        android:gravity="center_horizontal"
        android:background="@color/orange"
        android:orientation="vertical"
        android:id="@+id/layoutRecipes"
        android:padding="20dp">

        <EditText
            android:id="@+id/recTitleEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="60dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/recImgEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/noimg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/recTimeEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durée"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:inputType="number"
                />

            <EditText
                android:id="@+id/recPersEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personne(s)"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:inputType="number"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textSeekBarEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/redbutton"
            android:text=""
            android:textSize="35dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_marginTop="10dp"

            />

        <SeekBar
            android:id="@+id/categBarEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="2"
            android:padding="25dp"
            android:progress="0" />


        <TextView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="INGREDIENTS :"
            android:textSize="35dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/recIngredientEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Des ingrédients \n c'est toujours utile \n pour une recette"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="RECETTE :"
            android:textSize="35dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/recRecetteEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1. Cliquez sur modifier \n 2. Ajoutez les informations manquantes \n 3. Vous pouvez enfin cuisiner !"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:inputType="textMultiLine"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editButtonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/greenbutton"
            android:padding="10dp"
            android:textSize="35dp"
            android:text="ENREGISTRER"
            android:layout_marginTop="50dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editButtonDel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/redbutton"
            android:padding="10dp"
            android:textSize="25dp"
            android:text="SUPPRIMER"
            android:layout_marginTop="60dp"/>

    </LinearLayout>

</ScrollView>