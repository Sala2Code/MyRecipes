<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecipesRecette"
        android:gravity="center_horizontal"
        android:background="@color/orange"
        android:orientation="vertical"
        android:id="@+id/layoutRecipes"
        android:padding="20dp">

        <TextView
            android:id="@+id/recTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="60dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/recImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/noimg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/recTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durée"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textSize="30dp"
                />

            <TextView
                android:id="@+id/recPers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personne(s)"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textSize="30dp"
                />

        </LinearLayout>

        <TextView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="INGREDIENTS :"
            android:textSize="35dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/recIngredient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Des ingrédients \n c'est toujours utile \n pour une recette"
            android:textSize="25dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="RECETTE :"
            android:textSize="35dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recRecette"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1. Cliquez sur modifier \n 2. Ajoutez les informations manquantes \n 3. Vous pouvez enfin cuisiner !"
            android:textSize="25dp"
            android:gravity="center_horizontal"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/greenbutton"
            android:padding="10dp"
            android:textSize="30dp"
            android:text="MODIFIER"
            android:layout_marginTop="50dp"/>

    </LinearLayout>

</ScrollView>